PARSER_BEGIN(Yaka)



public class Yaka {

	static Expression exp = new Expression();
	static Declaration declaration = new Declaration();
	static TabIdent tabIdent = new TabIdent();
	static YVM yvm = new YVM();
	static YVMasm yvmAsm = new YVMasm();
	
